<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jason.grocery">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grocery"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CartActivity"
            android:label="@string/title_activity_cart" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.ProductActivity" />
        <activity android:name=".activities.SubcategoryActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.ui.OrderResultActivity" />
        <activity android:name=".activities.ui.PaymentActivity" />
        <activity android:name=".activities.AddressActivity" />
    </application>

</manifest>